@model IEnumerable<Core.BladeServer>

@{
    View.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Server Inventory</h2>

<p>
    @Html.ActionLink("Server List", "Index", "BladeServer")
</p>
<p>
    @Html.ActionLink("Chassis List", "Index", "BladeChassis")
</p>
<table border="1">
    <tr>
        <th>
            Hostname
        </th>
        <th>
            ServerRole
        </th>
        <th>
            IPAddress
        </th>
        <th>
            OS
        </th>
         <th>
            BladeChassis
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @item.Hostname
        </td>
        <td>
            @item.ServerRole
        </td>
        <td>
            @item.IPAddress
        </td>
        <td>
            @item.OS
        </td>
         <td>
            @item.BladeChassis.Description (@item.BladeChassis.ChassisID)  
        </td>
    </tr>
}

</table>

